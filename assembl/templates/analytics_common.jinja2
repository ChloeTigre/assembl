<script type="text/javascript">var globalAnalytics = {};</script>
{% if web_analytics.get('enabled', False) %}
    <!-- Begin adding Analytics logic -->
    {% if "piwik" in web_analytics %}
        {{ web_analytics['piwik']['script']|safe }}
        <script type="text/javascript">
            globalAnalytics.piwik = {
                host: "{{ web_analytics['piwik']['host'] }}",
                isActive: true 
            };
        </script>
    {% endif %}
{% endif %}

{% block analytics_extra_scripts %}
{% endblock %}

{% if bugherd_api_key %}
<script type='text/javascript'>
(function (d, t) {
var bh = d.createElement(t), s = d.getElementsByTagName(t)[0];
bh.type = 'text/javascript';
bh.src = 'https://www.bugherd.com/sidebarv2.js?apikey={{bugherd_api_key}}';
s.parentNode.insertBefore(bh, s);
})(document, 'script');
</script>
{% endif %}
